<h1>Create New Figure</h1>

<form action="/figures" method="post">

  <label>Name</label>
  <br></br>

  <input type="text" name="figure[name]" id="figure_name">
  <br></br>

  <label>Select Title(s)</label>
  <br></br>
  <%Title.all.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"><%=title.name%></input>
  <%end%>
  <br></br>

  <label>and/or create your own title:</label>
  <br></br>
  <input type="text" name="title[name]" id="new_title">
  <br></br>

  <label>Select Landmark(s)</label>
  <br></br>
  <%Landmark.all.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"><%=landmark.name%></input>
  <%end%>
  <br></br>

  <label>and/or create your own landmark:</label>
  <br></br>
  <p>Name: <input type="text" name="landmark[name]" id="new_landmark"></p>
  <p>Year Completed: <input type="text" name="landmark[year_completed]"</p>
  <br></br>

  <input type="submit" value="Create New Figure">

</form>
